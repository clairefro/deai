{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true
  },
  "include": ["src/electron/**/*", "src/shared/**/*"]
}
